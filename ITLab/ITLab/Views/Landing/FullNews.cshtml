
@{
    Layout = null;
}
@model ITLab.Client_Objects.FullNews

<!DOCTYPE html>
<html>
<head>
    <title>ITlab Одесса - полная новость</title>
    <!-- META tags -->
    <meta charset="utf-8">
    <meta name="author" content="ITL">
    <meta name="description" content="">
    <meta name="keywords" content="">
    <!-- LINK tags -->
    <link rel="stylesheet" type="text/css" href="~/css/normalize.css">
    <link rel="stylesheet" type="text/css" href="~/css/animate.min.css">
    <link rel="stylesheet" type="text/css" href="~/css/main.css">
    <!-- Полифил для корректного отображения HTML5 элементов в старых версиях Internet Explorer-->
    <!--[if lt IE 9]>
      <script src="https://cdnjs.cloudflare.com/ajax/libs/html5shiv/3.7.3/html5shiv.js"></script>
    <![endif]-->
</head>
<body>
    <header>
        <div class="header-contact">
            <ul>
                <li><img src="~/images/place.png">ул. Кузнечная,1</li>
                <li>
                    <img src="~/images/phone.png">
                    <ul class="tel-list">
                        <li><a href='tel:380683030810'>+38(068)30-30-810</a></li>
                        <li><a href='tel:380665556272'>+38(066)555-62-72</a></li>
                    </ul>
                </li>
                <li><img src="~/images/mail.png"><a href='mailto:it.ddo.od@gmail.com'>it.ddo.od@gmail.com</a></li>
                <li>
                    <ul class="h-social">
                        <li><a href=""><img src="~/images/facebook.png"></a></li>
                        <li><a href=""><img src="~/images/youtube.png"></a></li>
                        <li><a href=""><img src="~/images/insta.png"></a></li>
                    </ul>
                </li>
            </ul>
        </div>
        <nav>
            <span>IT Lab Odessa</span>
            <ul>
                <li><a href="#courses">Курсы</a></li>
                <li><a href="#">Проекты</a></li>
                <li><a href="#">Контакты</a></li>
                <li><span>UA</span> / <span class="active-lang">RU</span></li>
                <li><a href="https://www.youtube.com/watch?v=urU2EcKWDXw" class="sign-in"><button>Вход</button></a></li>
            </ul>
        </nav>
    </header>
    <main>
        <section id="newsBlock">
            <div class="filter">
                <div class="prev-lab">
                    <div class="prev-lab-news">
                        <h1>Некст профориентация на<br> Морвокзале</h1>
                        <p>
                            Подпишитесь на рассылку — оставайтесь в курсе
                            <br>новостей <span>IT Lab Odessa</span>
                        </p>
                        <input id="subEmail" type="email" placeholder="E-mail">
                        <button id="subscribe_on_news">Подписаться</button>
                        <br>
                    </div>
                    <img src="~/images/arrowDown.png" class="animated infinite pulse delay-.7s" onclick="toElem(news_block)">
                </div>
            </div>
        </section>
        <section id="news_block">
            <div class="news_block_wrapper">
                <div class="news_statistic">
                    <div class="fullNewsIdForComments" style="display:none">@Model.Id</div>
                    <p class="st_info">@Model.TimeDate / @Model.CommentsCount комментариев / @Model.ViewsCount просмотров <span>5.0</span> 3 голоса</p>
                </div>
                @foreach (var item in @Model.Videos)
                {
                    
                    <iframe class="news_video" width="900" height="506" src="@item.Link" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                }

                @foreach (var item2 in @Model.Photos)
                {
                    <img src="@item2.Link" alt="Alternate Text" class="fullNewsImage" />
                }




                <h3>
                    @Model.Title
                </h3>
                <p>
                    @Model.FullDescription
                </p>
                <hr>
                <div class="news_footer">
                    <ul id="estimate">
                        <li data-val="1">✩</li>
                        <li data-val="2">✩</li>
                        <li data-val="3">✩</li>
                        <li data-val="4">✩</li>
                        <li data-val="5">✩</li>
                    </ul>

                    <ul class="news_soc">
                        <li><a href="#"><img src="~/images/news_fb.png"></a></li>
                        <li><a href="#"><img src="~/images/news_tg.png"></a></li>
                        <li><a href="#"><img src="~/images/news_inst.png"></a></li>
                        <li><a href="#"><img src="~/images/news_viber.png"></a></li>
                    </ul>
                    <div class="comment_block">
                        <div class="news_comments">
                            <p>Посмотреть предыдущие комментарии (5)</p>
                        </div>
                        <div class="new_comment">
                            <div class="comment_avatar">
                                <img src="https://www.w3schools.com/images/colorpicker.gif">
                            </div>
                            <textarea class="send_news_comment_area"></textarea>
                            <div id="send_news_comment" asp-action="Comments" asp-route-id="@Model.Id"></div>

                        </div>

                        <div id="comments_block"> </div>
                    </div>

                </div>
            </div>
        </section>
        <h3 class="same_news">Похожие материалы</h3>
        <section id="same_news_block">
            @await Html.PartialAsync("ShortNews", Model.ShortNews)
        </section>
    </main>
    <footer>
        <div class="footer-block">
            <div class="footer-section">
                <span class="wow fadeInLeft" data-wow-delay="0.5s">IT Lab Odessa</span>
                <p class="wow fadeInLeft" data-wow-delay="0.5s">
                    Образование - это самая важная вещь, которую родитель может предоставить своему ребенку. Вот почему выбор идеальной STEM-школы так важен!
                </p>
                <div class="copyright wow fadeInUp" data-wow-delay="0.5s">© 2019. Все права защищены.</div>
            </div>
            <div class="footer-section wow fadeInUp" data-wow-delay="0.5s">
                <div class="sf-block">
                    <b>Навигация</b>
                    <ul>
                        <li><a href="#">Курсы</a></li>
                        <li><a href="#">Проекты</a></li>
                        <li><a href="#">Контакты</a></li>
                        <li><a href="#">Вход</a></li>
                    </ul>
                </div>
            </div>
            <div class="footer-section wow fadeInUp" data-wow-delay="0.7s">
                <div class="s-footer">
                    <b>Контактная информация</b>
                    <ul>
                        <li><img src="~/images/place.png">ул. Кузнечная,1</li>
                        <li>
                            <img src="~/images/phone.png">
                            <ul class="tel-list">
                                <li><a href='tel:380683030810'>+38(068)30-30-810</a></li>
                                <li><a href='tel:380665556272'>+38(066)555-62-72</a></li>
                            </ul>
                        </li>
                        <li><img src="~/images/mail.png"><a href='mailto:it.ddo.od@gmail.com' class="fEmail">it.ddo.od@gmail.com</a></li>
                    </ul>
                    <ul class="social-footer">
                        <li><a href=""><img src="~/images/facebook.png"></a></li>
                        <li><a href=""><img src="~/images/youtube.png"></a></li>
                        <li><a href=""><img src="~/images/insta.png"></a></li>
                    </ul>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/js/wow.min.js"></script>
    <script src="~/js/fullNews.js"></script>
    <script src="~/js/main.js"></script>


</body>
</html>