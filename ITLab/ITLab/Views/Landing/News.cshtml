
@{
    Layout = null;
}
@model List<ITLab.Client_Objects.ShortNews>
<!DOCTYPE html>
<html>
<head>
    <title>ITlab Одесса - новости</title>
    <!-- META tags -->
    <meta charset="utf-8">
    <meta name="author" content="ITL">
    <meta name="description" content="">
    <meta name="keywords" content="">
    <!-- LINK tags -->
    <link href="~/css/normalize.css" rel="stylesheet" />
    <link href="~/css/animate.min.css" rel="stylesheet" />
    <link href="~/css/main.css" rel="stylesheet" />
    @*<link rel="stylesheet" type="text/css" href="css/normalize.css">
        <link rel="stylesheet" type="text/css" href="css/animate.min.css">
        <link rel="stylesheet" type="text/css" href="css/main.css">*@
    <!-- Полифил для корректного отображения HTML5 элементов в старых версиях Internet Explorer-->
    <!--[if lt IE 9]>
      <script src="https://cdnjs.cloudflare.com/ajax/libs/html5shiv/3.7.3/html5shiv.js"></script>
    <![endif]-->
</head>
<body>
    <header>
        <div class="header-contact">
            <ul>
                <li><img src="~/images/place.png">ул. Кузнечная,1</li>
                <li>
                    <img src="~/images/phone.png">
                    <ul class="tel-list">
                        <li><a href='tel:380683030810'>+38(068)30-30-810</a></li>
                        <li><a href='tel:380665556272'>+38(066)555-62-72</a></li>
                    </ul>
                </li>
                <li><img src="~/images/mail.png"><a href='mailto:it.ddo.od@gmail.com'>it.ddo.od@gmail.com</a></li>
                <li>
                    <ul class="h-social">
                        <li><a href="https://www.facebook.com/itlabnetua/" target="_blank"><img src="~/images/facebook.png"></a></li>
                        <li><a href="https://www.youtube.com/channel/UCPolZba5BAD8vJqtmKT3vEg" target="_blank"><img src="~/images/youtube.png"></a></li>
                        <li><a href="https://www.instagram.com/itlab_odessa/" target="_blank"><img src="~/images/insta.png"></a></li>
                    </ul>
                </li>
            </ul>
        </div>
        <nav>
            <span>IT Lab Odessa</span>
            <ul>
                <li><a href="#courses">Курсы</a></li>
                <li><a href="#">Проекты</a></li>
                <li><a href="#">Контакты</a></li>
                <li><span>UA</span> / <span class="active-lang">RU</span></li>
                <li><a href="https://www.youtube.com/watch?v=urU2EcKWDXw" class="sign-in"><button>Вход</button></a></li>
            </ul>
        </nav>
    </header>
    <main>
        <section id="mainNewsBlock">
            <div class="filter">
                <div class="prev-lab">
                    <div class="prev-lab-news">
                        <h1>Новости лаборатории</h1>
                        <p>
                            Подпишитесь на рассылку — оставайтесь в курсе
                            <br>новостей <span>IT Lab Odessa</span>
                        </p>
                        <input id="subEmail" type="email" placeholder="E-mail">
                        <button id="subscribe">Подписаться</button>
                        <br>
                    </div>
                    <img src="~/images/arrowDown.png" class="animated infinite pulse delay-.7s" onclick="toElem(fullNews)">
                </div>
            </div>
        </section>
        <section id="fullNews">
            <div class="news-block">
                <div class="news-filter">
                    <img src="~/images/sort-news.png" width="20">
                    <span>Сортировать:</span>
                    <div class="filter-news-dropdown">
                        <button id="toSort">по дате</button>
                        <ul id="sortList">
                            <li data-type='date'>по дате</li>
                            <li data-type='comments'>по комментариям</li>
                            <li data-type='views'>по просмотрам</li>
                        </ul>
                    </div>
                </div>
                <div class="news-block-body">
                    <!--news template-->

                    @foreach (var item in Model)
                    {
        <div class="slider-news">
            <div class="news-date">
                <span>@item.TimeDate</span>
            </div>
            <div class="slider-news-header" style="background-image: url('@item.HeadPhoto')"></div>
            <div class="news-body">
                <span>«@item.Title</span>
                <p><span>@item.CommentsCount</span> комментариев / <span>@item.ViewsCount</span> просмотров</p>
                <p>
                    @item.ShortDescription
                </p>
            </div>
            <div class="news-button">
                <button>Подробнее</button>
            </div>
        </div>}


                    <!--end news template-->
                </div>
                <div class="more-news-block">
                    <button id="more-news">Ещё новости</button>
                </div>
            </div>
        </section>
    </main>
    <footer>
        <div class="footer-block">
            <div class="footer-section">
                <span class="wow fadeInLeft" data-wow-delay="0.5s">IT Lab Odessa</span>
                <p class="wow fadeInLeft" data-wow-delay="0.5s">
                    Образование - это самая важная вещь, которую родитель может предоставить своему ребенку. Вот почему выбор идеальной STEM-школы так важен!
                </p>
                <div class="copyright wow fadeInUp" data-wow-delay="0.5s">© 2020. Все права защищены.</div>
            </div>
            <div class="footer-section wow fadeInUp" data-wow-delay="0.5s">
                <div class="sf-block">
                    <b>Навигация</b>
                    <ul>
                        <li><a href="/Landing/Cources">Курсы</a></li>
                        <li><a href="#">Проекты</a></li>
                        <li><a href="/Landing/Contacts">Контакты</a></li>
                        <li><a href="#">Вход</a></li>
                    </ul>
                </div>
            </div>
            <div class="footer-section wow fadeInUp" data-wow-delay="0.7s">
                <div class="s-footer">
                    <b>Контактная информация</b>
                    <ul>
                        <li><img src="~/images/place.png">ул. Кузнечная,1</li>
                        <li>
                            <img src="~/images/phone.png">
                            <ul class="tel-list">
                                <li><a href='tel:380683030810'>+38(068)30-30-810</a></li>
                                <li><a href='tel:380665556272'>+38(066)555-62-72</a></li>
                            </ul>
                        </li>
                        <li><img src="~/images/mail.png"><a href='mailto:it.ddo.od@gmail.com' class="fEmail">it.ddo.od@gmail.com</a></li>
                    </ul>
                    <ul class="social-footer">
                        <li><a href="https://www.facebook.com/itlabnetua/" target="_blank"><img src="~/images/facebook.png"></a></li>
                        <li><a href="https://www.youtube.com/channel/UCPolZba5BAD8vJqtmKT3vEg" target="_blank"><img src="~/images/youtube.png"></a></li>
                        <li><a href="https://www.instagram.com/itlab_odessa/" target="_blank"><img src="~/images/insta.png"></a></li>
                    </ul>
                </div>
            </div>
        </div>
    </footer>
    <script src="js/wow.min.js"></script>
    <script src="js/main.js"></script>
    <script src="js/news.js"></script>
</body>
</html>